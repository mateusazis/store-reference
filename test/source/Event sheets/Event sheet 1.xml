<?xml version="1.0" encoding="utf-8" ?>
<c2eventsheet>
    <!--All the 'name' attributes are ignored by Construct 2 - they are there for readability only.-->
    <name>Event sheet 1</name>
    <events>
        <event-block>
            <conditions>
                <condition id="-2" name="On start of layout" type="System" />
            </conditions>
            <actions />
            <sub-events>
                <event-block>
                    <conditions>
                        <condition behavior="StoreReference" id="0" name="Has reference" type="Player">
                            <param id="0" name="Reference name">&quot;Blosh&quot;</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="0" name="Log" type="AiyraDebugger">
                            <param id="0" name="Message">&quot;Has reference&quot;</param>
                        </action>
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition disabled="1" id="-14" name="Pick by unique ID" type="Enemy">
                            <param id="0" name="Unique ID">3</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action behavior="StoreReference" id="0" name="Set Reference" type="Player">
                            <param id="0" name="Reference name">&quot;Blosh&quot;</param>
                            <param id="1" name="Object type">Enemy</param>
                        </action>
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition behavior="StoreReference" id="0" name="Has reference" type="Player">
                            <param id="0" name="Reference name">&quot;Blosh&quot;</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="0" name="Log" type="AiyraDebugger">
                            <param id="0" name="Message">&quot;Reference FOUND&quot;</param>
                        </action>
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition behavior="StoreReference" id="1" name="Get reference" type="Player">
                            <param id="0" name="Reference name">&quot;Blosh&quot;</param>
                            <param id="1" name="Object type">Enemy</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-8" name="Set angle" type="Enemy">
                            <param id="0" name="Angle">-90</param>
                        </action>
                    </actions>
                    <sub-events>
                        <event-block>
                            <conditions>
                                <condition id="-11" name="For Each" type="System">
                                    <param id="0" name="Object">Enemy</param>
                                </condition>
                            </conditions>
                            <actions>
                                <action id="0" name="Log" type="AiyraDebugger">
                                    <param id="0" name="Message">&quot;retrieved enemy has uid &quot; &amp; Enemy.UID</param>
                                </action>
                            </actions>
                        </event-block>
                    </sub-events>
                </event-block>
            </sub-events>
        </event-block>
        <event-block>
            <conditions>
                <condition id="6" name="On object clicked" type="Mouse">
                    <param id="0" name="Mouse button">0</param>
                    <param id="1" name="Click type">0</param>
                    <param id="2" name="Object clicked">Player</param>
                </condition>
            </conditions>
            <actions>
                <action id="0" name="Log" type="AiyraDebugger">
                    <param id="0" name="Message">&quot;clicked&quot;</param>
                </action>
            </actions>
            <sub-events>
                <event-block>
                    <conditions>
                        <condition behavior="StoreReference" id="1" name="Get reference" type="Player">
                            <param id="0" name="Reference name">&quot;Blosh&quot;</param>
                            <param id="1" name="Object type">Enemy</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action id="-9" name="Destroy" type="Enemy" />
                    </actions>
                </event-block>
            </sub-events>
        </event-block>
        <event-block>
            <conditions>
                <condition id="0" name="On click" type="Mouse">
                    <param id="0" name="Mouse button">2</param>
                    <param id="1" name="Click type">0</param>
                </condition>
            </conditions>
            <actions>
                <action behavior="StoreReference" id="1" name="Clear Reference" type="Player">
                    <param id="0" name="Reference name">&quot;Blosh&quot;</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="6" name="On object clicked" type="Mouse">
                    <param id="0" name="Mouse button">0</param>
                    <param id="1" name="Click type">0</param>
                    <param id="2" name="Object clicked">Enemy</param>
                </condition>
                <condition disabled="1" id="-11" name="For Each" type="System">
                    <param id="0" name="Object">Enemy</param>
                </condition>
            </conditions>
            <actions>
                <action behavior="StoreReference" id="2" name="Remove Reference" type="Player">
                    <param id="0" name="Reference name">&quot;Blosh&quot;</param>
                    <param id="1" name="Object type">Enemy</param>
                </action>
                <action id="-16" name="Set opacity" type="Enemy">
                    <param id="0" name="Opacity">50</param>
                </action>
            </actions>
        </event-block>
    </events>
</c2eventsheet>
