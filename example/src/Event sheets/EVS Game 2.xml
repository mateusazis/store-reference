<?xml version="1.0" encoding="utf-8" ?>
<c2eventsheet>
    <!--All the 'name' attributes are ignored by Construct 2 - they are there for readability only.-->
    <name>EVS Game 2</name>
    <events>
        <event-block>
            <conditions>
                <condition id="-2" name="On start of layout" type="System" />
            </conditions>
            <actions>
                <action behavior="StoreReference" disabled="1" id="0" name="Set Reference" type="Item">
                    <param id="0" name="Reference name">&quot;&quot;</param>
                    <param id="1" name="Object type">Player</param>
                </action>
            </actions>
            <sub-events>
                <event-block>
                    <conditions>
                        <condition id="-11" name="For Each" type="System">
                            <param id="0" name="Object">PlayerText</param>
                        </condition>
                        <condition id="-7" name="Compare instance variable" type="Player">
                            <param id="0" name="Instance variable">id</param>
                            <param id="1" name="Comparison">0</param>
                            <param id="2" name="Value">PlayerText.id</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action behavior="Pin" id="0" name="Pin to object" type="PlayerText">
                            <param id="0" name="Pin to">Player</param>
                            <param id="1" name="Mode">1</param>
                        </action>
                    </actions>
                    <sub-events>
                        <event-block>
                            <conditions />
                            <actions />
                        </event-block>
                    </sub-events>
                </event-block>
            </sub-events>
        </event-block>
        <variable constant="1" name="START_RANGE" static="0" type="number">360</variable>
        <event-block>
            <conditions>
                <condition id="0" name="On collision with another object" type="Player">
                    <param id="0" name="Object">Item</param>
                </condition>
                <condition behavior="StoreReference" id="1" inverted="1" name="Is reference set" type="Item">
                    <param id="0" name="Reference name">&quot;&quot;</param>
                </condition>
            </conditions>
            <actions>
                <action behavior="StoreReference" id="0" name="Set Reference" type="Item">
                    <param id="0" name="Reference name">&quot;&quot;</param>
                    <param id="1" name="Object type">Player</param>
                </action>
                <action id="-10" name="Set value" type="Item">
                    <param id="0" name="Instance variable">elapsed</param>
                    <param id="1" name="Value">random(START_RANGE)</param>
                </action>
                <action id="0" name="Log" type="AiyraDebugger">
                    <param id="0" name="Message">&quot;picked count: &quot; &amp; Player.PickedCount</param>
                </action>
                <action id="0" name="Log" type="AiyraDebugger">
                    <param id="0" name="Message">&quot;the player has uid &quot; &amp; Player.UID</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="-7" name="Compare instance variable" type="Player">
                    <param id="0" name="Instance variable">id</param>
                    <param id="1" name="Comparison">0</param>
                    <param id="2" name="Value">1</param>
                </condition>
            </conditions>
            <actions />
            <sub-events>
                <event-block>
                    <conditions>
                        <condition id="2" name="Key is down" type="Keyboard">
                            <param id="0" name="Key">87 (W)</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action behavior="8Direction" id="7" name="Simulate control" type="Player">
                            <param id="0" name="Control">2</param>
                        </action>
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="2" name="Key is down" type="Keyboard">
                            <param id="0" name="Key">68 (D)</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action behavior="8Direction" id="7" name="Simulate control" type="Player">
                            <param id="0" name="Control">1</param>
                        </action>
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="2" name="Key is down" type="Keyboard">
                            <param id="0" name="Key">83 (S)</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action behavior="8Direction" id="7" name="Simulate control" type="Player">
                            <param id="0" name="Control">3</param>
                        </action>
                    </actions>
                </event-block>
                <event-block>
                    <conditions>
                        <condition id="2" name="Key is down" type="Keyboard">
                            <param id="0" name="Key">65 (A)</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action behavior="8Direction" id="7" name="Simulate control" type="Player">
                            <param id="0" name="Control">0</param>
                        </action>
                    </actions>
                </event-block>
            </sub-events>
        </event-block>
        <event-block>
            <conditions>
                <condition id="-1" name="Every tick" type="System" />
            </conditions>
            <actions>
                <action id="-10" name="Set value" type="Item">
                    <param id="0" name="Instance variable">elapsed</param>
                    <param id="1" name="Value">(self.elapsed + dt) % 360</param>
                </action>
            </actions>
            <sub-events>
                <event-block>
                    <conditions>
                        <condition id="-11" name="For Each" type="System">
                            <param id="0" name="Object">Item</param>
                        </condition>
                        <condition behavior="StoreReference" id="0" name="Get reference" type="Item">
                            <param id="0" name="Reference name">&quot;&quot;</param>
                            <param id="1" name="Object type">Player</param>
                        </condition>
                    </conditions>
                    <actions>
                        <action disabled="1" id="-1" name="Set X" type="Item">
                            <param id="0" name="X">Player.X + sin(self.elapsed * self.speedX) * self.magX</param>
                        </action>
                        <action id="-3" name="Set position" type="Item">
                            <param id="0" name="X">Player.X + sin(self.elapsed * self.speedX) * self.magX</param>
                            <param id="1" name="Y">Player.Y + sin(self.elapsed * self.speedY) * self.magY</param>
                        </action>
                        <action id="0" name="Log" type="AiyraDebugger">
                            <param id="0" name="Message">&quot;moving around uid &quot; &amp; Player.UID</param>
                        </action>
                        <action id="0" name="Log" type="AiyraDebugger">
                            <param id="0" name="Message">&quot;picked count: &quot; &amp; Player.PickedCount</param>
                        </action>
                    </actions>
                </event-block>
            </sub-events>
        </event-block>
    </events>
</c2eventsheet>
